<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingTop="20dip"
              android:paddingStart="14dip"
              android:paddingEnd="14dip"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
  <LinearLayout
      android:orientation="vertical"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="12dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
      <ImageButton
          android:id="@+id/hour_inc"
          android:src="@drawable/ic_forward"
          android:background="@drawable/circle_btn"
          android:rotation="-90"
          android:elevation="6dp"
          android:padding="12dp"
          android:layout_marginEnd="32dp"
          android:layout_height="64dp"
          android:layout_width="64dp" />
      <ImageButton
          android:id="@+id/minute_inc"
          android:src="@drawable/ic_forward"
          android:background="@drawable/circle_btn"
          android:rotation="-90"
          android:elevation="6dp"
          android:padding="12dp"
          android:layout_marginStart="32dp"
          android:layout_height="64dp"
          android:layout_width="64dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/picker_time_entry"
        android:inputType="time"
        android:imeOptions="actionDone|flagNoFullscreen"
        android:selectAllOnFocus="true"
        android:gravity="center"
        android:textSize="34sp"
        android:layout_gravity="center"
        android:layout_width="192dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/picker_countdown"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="12dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
      <ImageButton
          android:id="@+id/hour_dec"
          android:src="@drawable/ic_forward"
          android:background="@drawable/circle_btn"
          android:rotation="90"
          android:elevation="6dp"
          android:padding="12dp"
          android:layout_marginEnd="32dp"
          android:layout_height="64dp"
          android:layout_width="64dp" />
      <ImageButton
          android:id="@+id/minute_dec"
          android:src="@drawable/ic_forward"
          android:background="@drawable/circle_btn"
          android:rotation="90"
          android:elevation="6dp"
          android:padding="12dp"
          android:layout_marginStart="32dp"
          android:layout_height="64dp"
          android:layout_width="64dp" />
    </LinearLayout>
  </LinearLayout>

  <Button
      android:id="@+id/picker_am_pm"
      android:background="@drawable/rect_btn"
      android:textSize="24sp"
      android:elevation="6dp"
      android:padding="12dp"
      android:layout_gravity="center"
      android:layout_marginStart="6dp"
      android:layout_marginEnd="6dp"
      android:layout_height="64dp"
      android:layout_width="64dp" />
</LinearLayout>
